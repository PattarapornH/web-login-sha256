extends layout

block content
    br
    h1 #{title}
    br    
    form(method='POST', action='/articles/edit/'+article._id)
        #form-group.row
            label.col-sm-1.col-from-label Gold
            div.mx-sm2
                input.form-control(name='gold', type='text', value=article.gold)
        br
        #form-group.row
            label.col-sm-1.col-from-label Silver
            div.mx-sm2
                input.form-control(name='silver', type='text', value=article.silver)
        br
        #form-group.row
            label.col-sm-1.col-from-label Bronze
            div.mx-sm2
                input.form-control(name='bronze', type='text',value=article.bronze)
        br
        input.btn.btn-primary(type='submit',value='Submit')
